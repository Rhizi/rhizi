#!/bin/sh

#
# Auto-generated Rhizi cron configuration
#
# Domain: '{{ domain_fqdn }}'
#
bkp_dir=/var/lib/rhizi/mux-bkp.d/{{ domain_fqdn }}
bkp_filename={{ domain_fqdn }}-bkp_$(date +%Y-%m-%d).dump
bkp_filepath=${bkp_dir}/${bkp_filename}

# dump neo4j DB
neo4j-shell -port {{ neo4j_port__shell }} -c dump > ${bkp_filepath}

# remove > 3 days old backups
find ${bkp_dir}/ -type f -mtime +3 -exec rm -vf '{}' \;

